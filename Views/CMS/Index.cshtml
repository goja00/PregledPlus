@section Scripts{
    <script src="~/js/TerminTabela.js"></script>
    <script src="~/js/termin2.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

}
@section Styles{
   
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
}
@model Termin

<!-- Add Modal -->
<div class="modal" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Dodajte proizvod</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Create" asp-controller="Termin" id="addForm">
                    <div class="form-group">

                        <label asp-for="ime"></label><input asp-for="ime" id="ime" class="form-control" type="text" placeholder="Ime" />
                        <span asp-validation-for="ime" class="text-danger"></span>
                        <label asp-for="prezime"></label><input id="prezime" asp-for="prezime" class="form-control" type="text" placeholder="Prezime" />
                        <span asp-validation-for="prezime" class="text-danger"></span>
                        <label asp-for="email"></label> <input asp-for="email" id="email" class="form-control" type="text" placeholder="Email" />
                        <span asp-validation-for="email" class="text-danger"></span>

                        <label asp-for="datum"></label><input asp-for="datum" id="datum" class="form-control" type="text" placeholder="Datum" />
                        <span asp-validation-for="datum" class="text-danger"></span>
                        <label asp-for="brojTelefona"></label><input asp-for="brojTelefona" id="brojTelefona" class="form-control" type="text" placeholder="Broj telefona" />
                        <span asp-validation-for="brojTelefona" class="text-danger"></span>
                        <label asp-for="status"></label><input asp-for="status" id="status" class="form-control" type="text" placeholder="Datum" />
                        <span asp-validation-for="status" class="text-danger"></span>
                       

                    </div>
                    <div style="float:right">
                        <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">Zatvori</button>
                        <button type="submit" class="btn btn-primary">Dodaj</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<!-- Edit MODAL-->
<div class="modal" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Izmenite proizvod</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" asp-controller="Termin" method="post" id="EditForm">
                    <div class="form-group">
                        <input asp-for="id" id="prodid" hidden />
                        <label asp-for="ime"></label><input asp-for="ime" id="ime" class="form-control" type="text" placeholder="Ime" />
                        <span asp-validation-for="ime" class="text-danger"></span>
                        <label asp-for="prezime"></label><input id="prezime" asp-for="prezime" class="form-control" type="text" placeholder="Prezime" />
                        <span asp-validation-for="prezime" class="text-danger"></span>
                        <label asp-for="email"></label> <input asp-for="email" id="email" class="form-control" type="text" placeholder="Email" />
                        <span asp-validation-for="email" class="text-danger"></span>

                        <label asp-for="datum"></label><input asp-for="datum" id="datum"  class="form-control" type="text" placeholder="Datum" />
                        <span asp-validation-for="datum" class="text-danger"></span>
                        <label asp-for="brojTelefona"></label><input asp-for="brojTelefona" id="brojTelefona" class="form-control" type="text" placeholder="Broj telefona" />
                        <span asp-validation-for="brojTelefona" class="text-danger"></span>
                        <label asp-for="status"></label><input asp-for="status" id="status" class="form-control" type="text" placeholder="Datum" />
                        <span asp-validation-for="status" class="text-danger"></span>
                    </div>
                    <div style="float:right">
                        <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">Zatvori</button>
                        <button type="submit" id="btnSave" class="btn btn-primary">Izmeni</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<!--Delete MODAL-->
<div class="modal" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Brisanje proizvoda</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Da li ste sigurni?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="Termin" method="post">
                    <input id="deleteId" asp-for="id" hidden />
                    <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">Zatvori</button>
                    <button type="submit" class="btn btn-danger">Izbrisi</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="text-center align-items-center justify-content-center">
    <table id="tblData" class="table-bordered display table-hover text-center py-2" style="font-size:15px;width:100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Email</th>
                <th>Datum</th>
                <th>Status</th>
                <th>Broj telefona</th>
                <th><button type="button" class="btn btn-success" data-toggle="modal" data-target="#AddModal">Add</button></th>

            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    </div>
